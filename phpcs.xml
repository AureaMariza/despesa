<?xml version="1.0"?>
<ruleset name="Laravel Standards">
    <description>The Laravel Coding Standards</description>

    <file>app</file>
    <file>config</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>
    <file>database</file>
    

    <exclude-pattern>*/database/factories/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/lang/*</exclude-pattern>
    <exclude-pattern>*/*.js</exclude-pattern>
    <exclude-pattern>*/*.css</exclude-pattern>
    <exclude-pattern>*/*.xml</exclude-pattern>
    <exclude-pattern>*/*.blade.php</exclude-pattern>
    <exclude-pattern>*/autoload.php</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/Controllers/Auth/*</exclude-pattern>
    <exclude-pattern>*/Auth/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <arg name="colors"/>
    <!-- <arg value="p"/> -->

    <ini name="memory_limit" value="128M"/>

    <rule ref="PSR12" >
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"></exclude>
    </rule>
</ruleset>